datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  fullName  String
  password  String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Post {
  id          String   @id @default(cuid()) @map("_id") @db.ObjectId
  image       String   @unique
  link        String   @unique
  servings    String
  kitchenName String
  vegOrNonVeg String
  healthy     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
